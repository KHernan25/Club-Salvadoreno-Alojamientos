# Configuración del servidor
PORT=3001
NODE_ENV=development

# Configuración del frontend
FRONTEND_URL=http://localhost:5173

# Configuración de JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Configuración de base de datos (para producción)
DATABASE_URL=postgresql://user:password@localhost:5432/club_salvadoreno
DB_HOST=localhost
DB_PORT=5432
DB_NAME=club_salvadoreno
DB_USER=postgres
DB_PASSWORD=password

# Configuración de email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@clubsalvadoreno.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Club Salvadoreño <noreply@clubsalvadoreno.com>

# Configuración de SMS
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/v1/send

# Configuración de almacenamiento de archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de notificaciones push
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=admin@clubsalvadoreno.com

# Configuración de monitoreo
SENTRY_DSN=your-sentry-dsn
MONITORING_ENABLED=false

# Configuración de cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Configuración de backups
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
