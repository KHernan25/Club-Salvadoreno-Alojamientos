# Database Configuration
DATABASE_URL=sqlite:./data/club_salvadoreno.db
DB_TYPE=sqlite

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=club-salvadoreno-super-secret-jwt-key-development-only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (development defaults)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@clubsalvadoreno.com
EMAIL_PASSWORD=development-password
EMAIL_FROM=Club Salvadore√±o <noreply@clubsalvadoreno.com>

# SMS Configuration (development defaults)
SMS_API_KEY=development-sms-key
SMS_API_URL=https://api.sms-provider.com/v1/send

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info

# VAPID (Push Notifications)
VAPID_PUBLIC_KEY=development-vapid-public-key
VAPID_PRIVATE_KEY=development-vapid-private-key
VAPID_EMAIL=admin@clubsalvadoreno.com

# Cache
REDIS_URL=memory://
CACHE_TTL=3600

# Monitoring
MONITORING_ENABLED=false

# Backup
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
