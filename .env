# Configuración del servidor
PORT=3001
NODE_ENV=development

# Configuración del frontend
FRONTEND_URL=http://localhost:8080

# Configuración de JWT
JWT_SECRET=club-salvadoreno-super-secret-jwt-key-development-only

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de almacenamiento de archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Configuración de email (desarrollo)
EMAIL_HOST=mail.clubsalvadoreno.com
EMAIL_PORT=465
EMAIL_USER=ghernandez@clubsalvadoreno.com
EMAIL_PASSWORD=your-real-email-password-here
EMAIL_FROM=Club Salvadoreño <ghernandez@clubsalvadoreno.com>

# Configuración de base de datos
# Para MySQL (configuración activa):
DATABASE_URL=mysql://root:@localhost:3306/club_salvadoreno_db
DB_TYPE=mysql
# Para SQLite (desarrollo local):
# DATABASE_URL=sqlite:./data/club_salvadoreno.db
# DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=club_salvadoreno_db
DB_USER=root
# DB_PASSWORD=

# Configuración de SMS (desarrollo)
SMS_API_KEY=development-sms-key
SMS_API_URL=https://api.sms-provider.com/v1/send

# Configuración de notificaciones push
VAPID_PUBLIC_KEY=development-vapid-public-key
VAPID_PRIVATE_KEY=development-vapid-private-key
VAPID_EMAIL=admin@clubsalvadoreno.com

# Configuración de cache
REDIS_URL=memory://
CACHE_TTL=3600

# Configuración de backups
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Configuración de logging
LOG_FILE=./logs/app.log

# Configuración de monitoreo
SENTRY_DSN=development-sentry-dsn
MONITORING_ENABLED=false
